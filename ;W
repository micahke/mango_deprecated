package graphic


type Rect2D struct {
  *Mesh // the eobmbedded Mesh object

  // POSITION:
  x, y float32
  width float32
  height float32
}


// Return a new Rect2D
func NewRect2D(x, y, width, height float32) *Rect2D {
  rect2d := new(Rect2D)
  rect2d.Mesh = new(Mesh)
  rect2d.x = x
  rect2d.y = y
  rect2d.width = width
  rect2d.height = height
  return rect2d
}
